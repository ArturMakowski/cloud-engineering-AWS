// hover over or get autocompletion for the settings keys in this file to learn about what they do
{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "editor.formatOnSave": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // notebook settings
    "notebook.formatOnSave.enabled": true,
    "notebook.lineNumbers": "on",
    // .py settings
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true,
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.indexing": true,
    "python.languageServer": "Pylance",
    "python.analysis.completeFunctionParens": true,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#381c26",
        "activityBar.background": "#381c26",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#486a35",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#381c26",
        "statusBar.background": "#160b0f",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#381c26",
        "statusBarItem.remoteBackground": "#160b0f",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#160b0f",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#160b0f99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#160b0f",
    "python.analysis.typeCheckingMode": "off",
}
